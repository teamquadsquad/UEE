        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/network_header_3"
        android:textColor="@color/textPrimary"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/network3"
        app:layout_constraintStart_toStartOf="@+id/network3"
        app:layout_constraintTop_toBottomOf="@+id/articleicon3" />

    <ImageView
        android:id="@+id/articleicon3"
        android:layout_width="70dp"
        android:layout_height="63dp"
