        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/network_header_1"
        android:textColor="@color/textPrimary"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/network1"
        app:layout_constraintStart_toStartOf="@+id/network1"
        app:layout_constraintTop_toBottomOf="@+id/articleicon1" />

    <ImageView
        android:id="@+id/articleicon1"
        android:layout_width="70dp"
        android:layout_height="63dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/network1"
        app:layout_constraintStart_toStartOf="@+id/network1"
        app:layout_constraintTop_toTopOf="@+id/network1"
        app:srcCompat="@drawable/wifi_img" />

    <ImageView
        android:id="@+id/read1"
        android:layout_width="51dp"
        android:layout_height="19dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/network1"
        app:layout_constraintStart_toStartOf="@+id/network1"
        app:layout_constraintTop_toBottomOf="@+id/header1"
        app:srcCompat="@drawable/read" />

    <TextView
        android:id="@+id/header2"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/network_header_2"
        android:textColor="@color/textPrimary"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@+id/network2"
        app:layout_constraintStart_toStartOf="@+id/network2"
        app:layout_constraintTop_toBottomOf="@+id/articleicon2" />

    <ImageView
        android:id="@+id/articleicon2"
        android:layout_width="70dp"
        android:layout_height="63dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/network2"
        app:layout_constraintStart_toStartOf="@+id/network2"
        app:layout_constraintTop_toTopOf="@+id/network2"
